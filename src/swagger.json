    "/merchants/applications/{id}/approve": {
      "post": {
        "summary": "Approve a merchant application",
        "tags": [
          "Merchants"
        ],
        "security": [
          {
            "AdminAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "Application ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tempPassword": {
                    "type": "string",
                    "format": "password",
                    "example": "temp123pass"
                  }
                },
                "required": [
                  "tempPassword"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Application approved and merchant created",
